{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": [
      "error",
      "^0.8.13"
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "separate-by-one-line-in-contract": [
      "warn"
    ],
    "two-lines-top-level-separator": [
      "warn"
    ],
    "indent": "warn",
    "bracket-align": "warn",
    "function-max-lines": [
      "error",
      75
    ]
  }
}